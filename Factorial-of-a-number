while True:
  try:
    number = int(input("Enter a number: ")) #informs the user to enter a number
    break  
  except ValueError:
    print("THATS NOT A NUMBER") #If something not a number value or an error value is entered informs the user that the input is not correct
def factorial(x):
  result = 1  
  for y in range(1, x + 1):  #Process to find Factorial
     result *= y 
  return result  #Returns the initial result

print("This Numbers Factorial is", factorial(number)) #Tells the user if it is a Factorial or not
